        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/quick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    style="@android:style/TextAppearance.Holo.Medium"/>

                <TextView
                    android:id="@+id/quick_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:singleLine="true"
                    android:text="@string/quick_bar"
                    style="@android:style/TextAppearance.Holo.Small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/quick_facebook"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/facebook_quick"
                    android:tint="@color/white"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/quick_twitter"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/twitter_quick"
                    android:tint="@color/white"
                    tools:ignore="ContentDescription"/>

                <ImageView
                    android:id="@+id/quick_instagram"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/instagram_quick"
                    android:tint="@color/white"
                    tools:ignore="ContentDescription"/>

                <ImageView
                    android:id="@+id/quick_vk"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/vk_quick"
                    android:tint="@color/white"
                    tools:ignore="ContentDescription"/>


        </LinearLayout>

</LinearLayout>